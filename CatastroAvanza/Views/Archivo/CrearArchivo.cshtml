@model CrearArchivoViewModel
@{
    ViewBag.Title = "CrearArchivo";
}

@section Styles{
    <link rel="stylesheet" href="~/Content/bootstrap-fileinput/css/fileinput.min.css">
    <link rel="stylesheet" href="~/Content/bootstrap-fileinput/themes/explorer-fa/theme.min.css">
}

<div class="card mb-4 wow fadeIn">

    <!--Card content-->
    <div class="card-body d-sm-flex justify-content-between">
        <h4 class="mb-2 mb-sm-0 pt-1">
            <span>Archivo general</span>
        </h4>
    </div>
</div>

<div class="wow fadeIn">
    @using (Html.BeginForm("CrearArchivo", "Archivo", FormMethod.Post, new { enctype = "multipart/form-data" } ))
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <div class="row">

                <div class="col-md-4">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="card">
                                <div class="card-body">
                                    <h5>Nuevo archivo</h5>
                                    <hr />
                                    <div class="row form-group">
                                        @Html.LabelFor(model => model.Nombre, htmlAttributes: new { @class = "control-label col-md-12" })
                                        <div class="col-md-12">
                                            @Html.EditorFor(model => model.Nombre, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.Nombre, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    <div class="row form-group">
                                        @Html.LabelFor(model => model.Archivo, htmlAttributes: new { @class = "control-label col-md-12" })
                                        <div class="col-md-12">
                                            @Html.TextBoxFor(m => m.Archivo, new { @type = "file", @class = "archivosClass" })
                                            @Html.ValidationMessageFor(model => model.Archivo, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <div class="justify-content-center text-right">
                                            <input type="submit" value="Crear Archivo" class="btn btn-primary" />
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-8">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="card">
                                <div class="card-body">
                                    <div class="row">
                                        <div class="col-md-12">
                                            <h5> <label class="control-label col-md-12">Archivos</label> </h5>
                                            <hr />
                                            <table class="table table-striped cell-border compact responsive nowrap" id="archivosTbl" width="90%">
                                            </table>
                                        </div>
                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@section Scripts
{
    <script src=" ~/Scripts/plugins/piexif.min.js"></script>
    <script src=" ~/Scripts/plugins/sortable.min.js"></script>
    <script src=" ~/Scripts/fileinput.min.js"></script>
    <script src=" ~/Scripts/locales/es.js"></script>
    <script src=" ~/Content/bootstrap-fileinput/themes/explorer-fa/theme.min.js"></script>
    <script src=" ~/Content/bootstrap-fileinput/themes/fa/theme.min.js"></script>
    @Scripts.Render("~/Scripts/Paginas/Archivo/CrearArchivo.js")

<script>
        $(document).ready(function () {
            CrearArchivoJs.urlObtenerArchivos = '@Url.Action("ConsultarArchivos")';
            CrearArchivoJs.urlDescargarArchivo = '@Url.Action("DescargarArchivo")';
            CrearArchivoJs.Inicializar();
        });
</script>
}
