
@{
    ViewBag.Title = "Dashboard";
}

<h2>Dashboard</h2>

<div class="row">
    <div class="col-md-6">
        <div class="card wow fadeIn">
            <div class="card-header">
                <h4 class="mb-2 mb-sm-0 pt-1">
                    <span>Usuarios asignaciones</span>
                </h4>
            </div>
            <!--Card content-->
            <div class="card-body ">
                <table class="table table-striped cell-border compact responsive" id="tblusuarios">
                </table>
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="card mb-4 wow fadeIn">
            <div class="card-header">
                <h4 class="mb-2 mb-sm-0 pt-1">
                    <span>Volumen Diario</span>
                </h4>
            </div>
            <div class="card-body">
                <div class="col-md-12">
                    <ul class="list-group">
                        <li class="list-group-item"><span class="badge badge-danger"><span id="vencidos"></span></span> Tareas vencidas.</li>
                        <li class="list-group-item"><span class="badge badge-dark"><span id="vencidoslargos"></span></span> Tareas vencidas ultimos tres dias.</li>
                        <li class="list-group-item"><span class="badge badge-warning"><span id="proximosavencer"></span></span> Proximas a vencerse (tres dias).</li>
                        <li class="list-group-item"><span class="badge badge-success"><span id="finalizados"></span></span> Tareas finalizadas.</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
<br />
<div class="row">
    <div class="col-md-6">
        <div class="card mb-4 wow fadeIn">
            <div class="card-header">
                <h4 class="mb-2 mb-sm-0 pt-1">
                    <span>Estado Gestion</span>
                </h4>
            </div>

            <div class="card-body d-sm-flex justify-content-between">
                <ul id="estadosls"></ul>
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="card mb-4 wow fadeIn">
            <div class="card-header">
                <h4 class="mb-2 mb-sm-0 pt-1">
                    <span>Actividades</span>
                </h4>
            </div>

            <div class="card-body justify-content-between">
                <div class="row">
                    <div class="col-md-6">
                        <h5> <label class="control-label col-md-12">Trabajos</label> </h5>
                        <hr />
                        <div id="tree"></div>
                    </div>
                    <div class="col-md-6">
                        <h5> <label class="control-label col-md-12">Trabajo seleccionado</label> </h5>
                        <hr />
                        <div class="row form-group">
                            <div class="col-md-5">
                                <label class="control-label col-md-12">Nombre:</label>
                            </div>
                            <div class="col-md-7">
                                <span id="NombreTrabajoTexto"></span>
                            </div>
                        </div>
                        <div class="row form-group">
                            <div class="col-md-5">
                                <label class="control-label col-md-12">Rol:</label>
                            </div>
                            <div class="col-md-7">
                                <span id="RolTrabajoTexto"></span>
                            </div>
                        </div>
                        <div class="row form-group">
                            <div class="col-md-5">
                                <label class="control-label col-md-12">Cantidad:</label>
                            </div>
                            <div class="col-md-7">
                                <span id="CantidadTrabajoTexto"></span>
                            </div>
                        </div>
                        <div class="row form-group">
                            <div class="col-md-5">
                                <label class="control-label col-md-12">Puntos Esfuerzo:</label>
                            </div>
                            <div class="col-md-7">
                                <span id="PuntosTrabajoTexto"></span>
                            </div>
                        </div>
                        <div class="row form-group">
                            <div class="col-md-5">
                                <label class="control-label col-md-12">Estado:</label>
                            </div>
                            <div class="col-md-7">
                                <span id="EstadoTrabajoTexto"></span>
                            </div>
                        </div>
                        <div class="row form-group">
                            <div class="col-md-5">
                                <label class="control-label col-md-12">Fecha esperada finalizacion:</label>
                            </div>
                            <div class="col-md-7">
                                <span id="FechaTrabajoTexto"></span>
                            </div>
                        </div>
                        <div class="row form-group">
                            <div class="col-md-5">
                                <label class="control-label col-md-12">Asignado a:</label>
                            </div>
                            <div class="col-md-7">
                                <span id="AsignadoTrabajoTexto"></span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts
{
    @Scripts.Render("~/Scripts/ModalControl.js")
    @Scripts.Render("~/Scripts/Paginas/Trabajo/TrabajoDashboard.js")
    @Scripts.Render("~/Scripts/bootstrap-treeview.js")
<script>
        $(document).ready(function () {
            TrabajoDashboardJs.urlVolumenTrabajo = '@Url.Action("ConsultarVolumen")';
            TrabajoDashboardJs.urlEstadoGestion = '@Url.Action("ConsultarEstado")';
            TrabajoDashboardJs.urlUsuarioGestion = '@Url.Action("ConsultarGestionAsignacionUsuarios")';


            TrabajoDashboardJs.TrabajoDashboardJs = '@Url.Action("CrearAsignacionTrabajo")';
            TrabajoDashboardJs.urlObtenerListadoTrabajosPorId = '@Url.Action("ConsultarTrabajosPorPadre")';
            TrabajoDashboardJs.urlObtenerTrabajoPorId = '@Url.Action("ConsultarTrabajosPorId")';
            TrabajoDashboardJs.Inicializar();
        });
</script>

}

